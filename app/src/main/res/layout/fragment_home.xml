<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/erreurChargement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginRight="30dp">

                <ImageButton
                    android:id="@+id/buttonHome2Sirops"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_menu_sirops"
                    android:background="@drawable/back"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:contentDescription="Bouton permettant de naviguer vers la page des sirops"
                    app:tint="#E9ECF4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sirops"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/buttonHome2Softs"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_menu_softs"
                    android:background="@drawable/back"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:contentDescription="Bouton permettant de naviguer vers la page des softs"
                    app:tint="#E9ECF4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Softs"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <!-- Bouton Bières -->
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginRight="30dp">

                <ImageButton
                    android:id="@+id/buttonHome2Bieres"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_menu_bieres"
                    android:background="@drawable/back"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:contentDescription="Bouton permettant de naviguer vers la page des bières"
                    app:tint="#E9ECF4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bières"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

            </LinearLayout>

            <!-- Bouton Vins -->
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/buttonHome2Vins"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_menu_vins"
                    android:background="@drawable/back"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:contentDescription="Bouton permettant de naviguer vers la page des vins"
                    app:tint="#E9ECF4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vins"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Bouton Classiques -->
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginRight="30dp">

                <ImageButton
                    android:id="@+id/buttonHome2Classiques"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_menu_classiques"
                    android:background="@drawable/back"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:contentDescription="Bouton permettant de naviguer vers la page des classiques"
                    app:tint="#E9ECF4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Classiques"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

            </LinearLayout>

            <!-- Bouton Extravagants -->
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/buttonHome2Extravagants"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_menu_extravagants"
                    android:background="@drawable/back"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:contentDescription="Bouton permettant de naviguer vers la page des extravagants"
                    app:tint="#E9ECF4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extravagants"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bouton Suggestions -->
        <Button
            android:id="@+id/boutonSuggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/suggestions_du_moment"
            android:background="@drawable/back"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/textSuggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:visibility="gone"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/suggestionBiere2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bi_re"
                    android:textColor="@color/colorSecondary"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center_horizontal"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal" >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/suggestionBiere"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:background="@color/colorSecondary" />

                <TextView
                    android:id="@+id/suggestionSirop2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sirop"
                    android:textColor="@color/colorSecondary"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/suggestionSirop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:background="@color/colorSecondary" />

                <TextView
                    android:id="@+id/suggestionClassique2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/classique"
                    android:textColor="@color/colorSecondary"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/suggestionClassique"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
